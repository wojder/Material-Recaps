<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.wojdera.Material_Recaps"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="16"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application android:label="@string/app_name"
                 android:icon="@drawable/logo_bkn"
                 android:theme="@style/RecapsTheme"
                 android:supportsRtl="true">
        <activity android:name=".RecapsViewActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".RecapDetailActivity"
                  android:label="@string/app_name"
                  android:parentActivityName=".RecapsViewActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                       android:value=".RecapsViewActivity"/>
        </activity>
    </application>
</manifest>
